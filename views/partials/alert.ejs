<%if(typeof errors !== 'undefined'){
    errors.forEach(error => { %>
    <div class="alert alert-dismissible alert-warning">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong><%= error.msg %></strong>
</div>
<% }) }; %>

